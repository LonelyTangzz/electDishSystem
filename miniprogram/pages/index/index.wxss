/* pages/index/index.wxss */

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
  background: #F5F5F5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  position: relative;
  margin-bottom: 20rpx;
  background: #FFFFFF;
  border-radius: 40rpx;
  padding: 16rpx 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.search-input {
  font-size: 28rpx;
  color: #333;
}

.clear-search {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

/* 分类滚动 */
.category-scroll {
  margin-bottom: 20rpx;
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  gap: 16rpx;
  padding: 8rpx 0;
}

.category-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  background: #FFFFFF;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.category-item.active {
  background: linear-gradient(135deg, #73D13D 0%, #52C41A 100%);
  color: #FFFFFF;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(115, 209, 61, 0.3);
}

/* 菜品列表 */
.dish-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.dish-item {
  display: flex;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.dish-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 菜品图标 */
.dish-image-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.dish-emoji {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #F6FFED 0%, #E6FFFB 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 96rpx;
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 40rpx;
  height: 40rpx;
  background: #FF4D4F;
  color: #FFFFFF;
  border-radius: 20rpx;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.4);
}

/* 菜品信息 */
.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.dish-description {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.dish-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 12rpx;
}

.dish-rating,
.dish-sold {
  font-size: 22rpx;
  color: #999;
}

.dish-rating {
  color: #FA8C16;
}

/* 价格和操作区域 */
.dish-price-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 爱心星级显示 */
.dish-stars {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.stars-text {
  font-size: 32rpx;
  line-height: 1;
  letter-spacing: 2rpx;
}

.star-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.control-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #F0F0F0;
  color: #52C41A;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.control-btn:active {
  transform: scale(0.9);
}

.add-btn {
  background: linear-gradient(135deg, #73D13D 0%, #52C41A 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.add-btn:active {
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.2);
}

.quantity-text {
  min-width: 48rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
  font-size: 28rpx;
  color: #999;
}
