/* pages/mine/mine.wxss */

/* 用户卡片 */
.user-card {
  margin-bottom: 20rpx;
  padding: 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #F6FFED 0%, #E6FFFB 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  margin-right: 24rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.welcome {
  font-size: 24rpx;
  color: #999;
}

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
}

/* 头像选择按钮 */
.avatar-wrapper {
  padding: 0;
  margin: 0;
  background: none;
  border: none;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(115, 209, 61, 0.2);
}

.avatar-wrapper::after {
  border: none;
}

.avatar-wrapper .avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #F6FFED 0%, #E6FFFB 100%);
}

.login-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

/* 昵称输入框 */
.nickname-input-wrapper {
  width: 80%;
  margin-bottom: 30rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  background: #F5F5F5;
  border-radius: 44rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.login-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

.login-btn {
  width: 80%;
  height: 88rpx;
  background: linear-gradient(135deg, #73D13D 0%, #95DE64 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(115, 209, 61, 0.3);
  border: none;
  margin-top: 20rpx;
}

.login-btn::after {
  border: none;
}

.login-btn-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.login-btn-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.login-tip-error {
  margin-top: 40rpx;
  padding: 24rpx;
  background: #FFF7E6;
  border-radius: 16rpx;
  text-align: center;
}

.login-tip-error text {
  font-size: 26rpx;
  color: #FA8C16;
}

/* 订单统计 */
.stats-card {
  display: flex;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #73D13D;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

.stats-divider {
  width: 1rpx;
  height: 80rpx;
  background: #E0E0E0;
}

/* 功能菜单 */
.menu-section {
  margin-top: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.menu-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.menu-title {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 48rpx;
  color: #BDBDBD;
  font-weight: 300;
}

/* Demo模式提示 */
.demo-tip {
  margin-top: 40rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #FFF7E6 0%, #FFF1B8 100%);
  border-radius: 16rpx;
  text-align: center;
  font-size: 26rpx;
  color: #D48806;
  box-shadow: 0 4rpx 12rpx rgba(250, 173, 20, 0.15);
}

/* 厨房任务卡片 (新) */
.chef-card {
  margin-bottom: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #FFF0F6 0%, #FFE7E7 100%);
  border: 2rpx solid #FFADD2;
}

.chef-info {
  display: flex;
  flex-direction: column;
}

.chef-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.chef-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.chef-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #C41D7F;
}

.chef-desc {
  font-size: 24rpx;
  color: #FF85C0;
}

.chef-stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
}

.chef-count {
  font-size: 32rpx;
  font-weight: bold;
  color: #C41D7F;
}

.chef-label {
  font-size: 20rpx;
  color: #999;
}

.chef-arrow {
  font-size: 40rpx;
  color: #FFADD2;
  font-weight: 300;
  margin-left: 10rpx;
}

