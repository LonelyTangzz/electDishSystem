/* pages/order/order.wxss */

.container {
  min-height: 100vh;
  background: #F5F5F5;
  padding: 20rpx;
  padding-bottom: 180rpx;
}

/* 卡片通用样式 */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

/* 区块头部 */
.section-header {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.section-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 联系人信息 */
.contact-section {
  padding-bottom: 24rpx;
}

.form-item {
  padding: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-input::-webkit-input-placeholder {
  color: #BDBDBD;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea::-webkit-input-placeholder {
  color: #BDBDBD;
}

/* 订单明细 */
.order-section {
  padding-bottom: 0;
}

.order-items {
  padding: 24rpx;
}

.order-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.order-item:last-child {
  border-bottom: none;
}

.item-emoji {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #F6FFED 0%, #E6FFFB 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.item-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.item-quantity {
  font-size: 24rpx;
  color: #999;
}

.item-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #52C41A;
  flex-shrink: 0;
}

/* 费用明细 */
.price-section {
  padding: 24rpx;
  background: #FAFAFA;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.price-row:last-child {
  margin-bottom: 0;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 28rpx;
  color: #333;
}

.divider {
  height: 1rpx;
  background: #E0E0E0;
  margin: 24rpx 0;
}

.total-row {
  margin-top: 8rpx;
}

.total-row .price-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.total-row .price-value.total {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF4D4F;
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #73D13D 0%, #52C41A 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(82, 196, 26, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(82, 196, 26, 0.2);
}

.submit-icon {
  font-size: 40rpx;
}

/* Demo提示 */
.demo-tip {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0;
  margin-top: 20rpx;
}
