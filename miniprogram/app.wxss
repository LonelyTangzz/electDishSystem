/**app.wxss**/
page {
  background-color: #F5F5F5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB',
    'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/* 通用样式 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 按钮样式 */
.btn-primary {
  background-color: #95DE64;
  color: #FFFFFF;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-primary:active {
  background-color: #73D13D;
}

.btn-secondary {
  background-color: #FFFFFF;
  color: #73D13D;
  border: 2rpx solid #95DE64;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 价格样式 */
.price {
  color: #73D13D;
  font-weight: bold;
  font-size: 32rpx;
}

.price-small {
  color: #FF5722;
  font-weight: bold;
  font-size: 28rpx;
}

/* 标题样式 */
.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #212121;
}

.subtitle {
  font-size: 28rpx;
  color: #212121;
}

.text-body {
  font-size: 24rpx;
  color: #757575;
}

.text-hint {
  font-size: 22rpx;
  color: #BDBDBD;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #E0E0E0;
  margin: 20rpx 0;
}

/* 居中 */
.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  color: #BDBDBD;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #BDBDBD;
  text-align: center;
}

/* 徽章 */
.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #95DE64;
  color: #FFFFFF;
  border-radius: 50%;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 20rpx;
  padding: 0 8rpx;
}


